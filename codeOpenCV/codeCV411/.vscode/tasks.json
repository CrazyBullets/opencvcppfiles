{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "opencv4.1.0 compile task",
            "type": "shell",
            "command": "g++",
            "args":[
            "-g",
            "-fexec-charset=GBK",
            // "${fileBasename}",
            "${workspaceRoot}\\${fileBasename}",
            "-o",
            "${workspaceRoot}\\${fileBasenameNoExtension}", 
            // "${workspaceFolder}\\${fileBasenameNoExtension}.exe",
            "-I",
            "D:/Program/Opencv411/include",
            "-L",
            "D:/Program/Opencv411/x64/mingw/bin",
            "-l",
            "libopencv_img_hash411",
            "-l",
            "libopencv_world411",
            "-l",
            "opencv_videoio_ffmpeg411_64"
            ],
            "options": {
                "cwd": "D:/Program/MinGW/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": { 
                "panel": "new" //默认为“shared“表示共享，改成new之后每个进程创建新的端口
            }
        }
    ]
}